<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSendNotification"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="@string/button1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendNotificationActionButtons"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="Send Notification with Action Buttons"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnSendNotification"
        app:layout_constraintStart_toStartOf="@+id/btnSendNotification"
        app:layout_constraintTop_toBottomOf="@+id/btnSendNotification" />

    <Button
        android:id="@+id/btnExpandable"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="Expandable Description"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnSendNotificationActionButtons"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnSendNotificationActionButtons"
        app:layout_constraintTop_toBottomOf="@+id/btnSendNotificationActionButtons" />

    <Button
        android:id="@+id/btnBigPicture"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="Show BigPicture on Notification"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnExpandable"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/btnExpandable"
        app:layout_constraintTop_toBottomOf="@+id/btnExpandable" />
</androidx.constraintlayout.widget.ConstraintLayout>